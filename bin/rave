#!/usr/bin/env ruby

here = File.dirname(__FILE__)
%w( create start usage ).each do |cmd|
	require File.join(here, "..", "lib", "commands", cmd)
end

args = ARGV
cmd = args.shift

if cmd
	case cmd
	when "create"
		create_robot(args)
	when "start"
		start_robot(args)
	else
		display_usage
	end
else
	usage
end